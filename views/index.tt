    [% IF posts %]

        [% FOREACH post IN posts %]

            <h4>
                <a href="/post/[% post.id %]/" class="title_link">
                    [% post.subject %]
                </a>
            </h4>

            <p>
                [% post.text %]
            </p>

            <div style="margin-bottom:1em">
                by <a href="/user/[% post.login %]/">[% post.poster %]</a>
                on [% post.stamp %].
                [% UNLESS comments %]<a href="/post/[% post.id %]/#comments">Comment</a>.[% END %]
            </div>

            [% IF comments %]

                <h4>Comments</h4>

                [% comments %]

                [% IF commentform %]

                    [% commentform %]

                [% ELSE %]

                    <h4>
                        COMMENTS ARE CLOSED
                    </h4>

                [% END %]

            [% END %]

            <hr />

        [% END %]

    [% ELSE %]

        <h4>
            [% IF searching %]
                POST NOT FOUND
            [% ELSE %]
                POST DOES NOT EXIST
            [% END %]
        </h4>

    [% END %]

